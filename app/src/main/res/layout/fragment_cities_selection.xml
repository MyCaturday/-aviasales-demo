<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sedymov.aviasales.presentation.core.views.ReactiveSearchView
            android:id="@+id/startCitySearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchHint="@string/start_city"/>

        <com.sedymov.aviasales.presentation.core.views.ReactiveSearchView
            android:id="@+id/destinationCitySearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchHint="@string/destination_city"/>

        <Button
            android:id="@+id/searchCitiesButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:text="@string/search_tickets"
            android:enabled="false" />

    </LinearLayout>

</FrameLayout>